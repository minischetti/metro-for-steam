"resource/layout/overlay_friendchangeconfirmationdialog.layout"
{
	controls
	{
		ConfirmButton { controlname="Button" labeltext="#Overlay_FriendChangeConfirmation_Confirm" }
		CancelButton { controlname="Button" labeltext="#Overlay_FriendChangeConfirmation_Cancel" }

		ReasonLabel { controlname="Label" labeltext="" wrap=1 }
	}
	
	layout
	{
		region { name="main" width=500 height=250 margin-top=40 margin-left=15 margin-right=15 }
		region { name="buttons" align="bottom" width="max" height=34 margin-right=10 margin-top=5 }

		place { control=ConfirmButton,CancelButton region=buttons dir=left align=right spacing=10 }

		place { control=ReasonLabel region=main dir=down spacing=15 width=max }
	}
}
